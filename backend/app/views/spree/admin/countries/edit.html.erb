<% content_for :page_title do %>
  <%= Spree.t(:editing_country) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:back_to_countries_list), spree.admin_countries_path, :icon => 'arrow-left' %>
<% end %>

<%= render :partial => 'spree/admin/shared/error_messages', :locals => { :target => @country } %>

<%= form_for [:admin, @country] do |f| %>
  <fieldset>
    <%= render :partial => 'form', :locals => { :f => f } %>

    <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>
